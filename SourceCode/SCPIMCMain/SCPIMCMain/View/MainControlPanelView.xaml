<UserControl x:Class="SCPIMCMain.View.MainControlPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SCPIMCMain.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- 1. 3 열 구조 추가 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 2. 좌측 설정 패널 -->
        <Grid Grid.Column="0"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Margin="5, 5, 5, 5">
            <!-- 열 정의: Label / TextBox -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 행 정의: IP, Port, Button -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <!-- ↓ 변경: 내용 기반 크기 -->
                <RowDefinition Height="Auto"/>
                <!-- Send Command Row -->
                <RowDefinition Height="Auto"/>
                <!-- Received Command Row -->
                <!-- 남은 공간 -->
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Device IP -->
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Text="Device IP:"
                       VerticalAlignment="Top"
                       Margin="0,8,10,0" Height="16"/>
            <Grid Grid.Row="0" Grid.Column="1">
                <TextBox x:Name="IpTextBox"
                         Margin="5,5,5,5"/>
                <TextBlock Text="Enter device IP"
                           Foreground="LightGray"
                           FontStyle="Italic"
                           Margin="5,5,5,5"
                           IsHitTestVisible="False" VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=IpTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- Port -->
            <TextBlock Grid.Row="1" Grid.Column="0"
                       Text="Port:"
                       VerticalAlignment="Top"
                       Margin="0,8,10,0" Height="16"/>
            <Grid Grid.Row="1" Grid.Column="1">
                <TextBox x:Name="PortTextBox"
                         Margin="5,5,5,5"/>
                <TextBlock Text="Enter port"
                           Foreground="LightGray"
                           FontStyle="Italic"
                           Margin="5,5,5,5"
                           IsHitTestVisible="False" VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=PortTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- Connect Button -->
            <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                    Content="Connect"
                    Margin="5,5,5,5" Grid.RowSpan="1" Height="23"/>

            <!-- Send Command Row -->
            <Grid Grid.Row="3" Grid.ColumnSpan="2" Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Send Command TextBox with placeholder hint -->
                <Grid Grid.Column="0">
                    <TextBox x:Name="SendCommandTextBox"
                             TextWrapping="Wrap"
                             VerticalAlignment="Center"
                             Margin="5,0,5,0"/>
                    <TextBlock Text="Type command here"
                               Foreground="LightGray"
                               FontStyle="Italic"
                               Margin="8,6,0,0"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SendCommandTextBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Send Command Button -->
                <Button x:Name="SendCommandButton"
                        Grid.Column="1"
                        Content="Send"
                        Padding="15,3"
                        Margin="0,0,5,0"/>
            </Grid>

            <!-- Received Command TextBox with placeholder hint -->
            <Grid Grid.Row="4" Grid.ColumnSpan="2" Margin="5,5,5,5">
                <TextBox x:Name="ReceivedCommandTextBox"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>
                <TextBlock Text="Received Response Displayed Here"
                           Foreground="LightGray"
                           FontStyle="Italic"
                           Margin="8,6,0,0"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=ReceivedCommandTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
            <TabControl Grid.Row="5" Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="5,5,5,5">
                <TabItem Header="TabItem">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="TabItem">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>
        </Grid>
        <!-- Styled Border for message logs -->
        <Border Style="{StaticResource ContentBorderStyle}"
                Grid.Column="1" Grid.ColumnSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Content="Sended Message Log" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <!-- 변경: Sended Message Log TextBox → Watermark 처리 -->
                    <Grid Grid.Row="1">
                        <TextBox x:Name="SendedMessageLogTextBox"
                                 Margin="5,5,5,5"
                                 TextWrapping="Wrap"/>
                        <TextBlock Text="Sended messages will appear here"
                                   Foreground="LightGray"
                                   FontStyle="Italic"
                                   Margin="8,6,0,0"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SendedMessageLogTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Content="Received Message Log" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <!-- 변경: Received Message Log TextBox → Watermark 처리 -->
                    <Grid Grid.Row="1">
                        <TextBox x:Name="ReceivedMessageLogTextBox"
                                 Margin="5,5,5,5"
                                 TextWrapping="Wrap"/>
                        <TextBlock Text="Received messages will appear here"
                                   Foreground="LightGray"
                                   FontStyle="Italic"
                                   Margin="8,6,0,0"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=ReceivedMessageLogTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Grid>
            </Grid>

        </Border>
        <!-- ...나머지 열(중앙/우측)에 들어갈 콘텐츠는 필요 시 추후 추가... -->
    </Grid>
</UserControl>
