<UserControl x:Class="SCPIMCMain.View.Controls.MacroManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:SCPIMCMain.ViewModel.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=viewModel:MacroManagementViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Macro 관리"
                   FontSize="16" FontWeight="Bold"
                   Margin="10"/>

        <ListBox ItemsSource="{Binding MacroModels}"
                 SelectedItem="{Binding SelectedMacro}"
                 Grid.Row="1" Grid.Column="0"
                 Margin="10"
                 x:Name="MacroListBox">
            <ListBox.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick"
                              Command="{Binding ExecuteMacroCommand}"
                              CommandParameter="{Binding ElementName=MacroListBox, Path=SelectedIndex}"/>
            </ListBox.InputBindings>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" Margin="5">
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="{Binding Description}"
                                   TextWrapping="Wrap"
                                   Foreground="Gray"
                                   Margin="0,3,0,0"/>
                        <TextBlock Foreground="DarkGray" FontSize="11" Margin="0,3,0,0">
                            <Run Text="Commands: "/>
                            <Run Text="{Binding CommandChain.Count, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="1" Grid.Column="1"
                    Orientation="Vertical"
                    Margin="10"
                    VerticalAlignment="Top">
            <Button Content="Add Macro"
                    Command="{Binding AddMacroCommand}"
                    Width="100" Margin="0,0,0,5"/>
            <Button Content="Edit Macro"
                    Command="{Binding EditMacroCommand}"
                    Width="100" Margin="0,0,0,5"/>
            <Button Content="Delete Macro"
                    Command="{Binding DeleteMacroCommand}"
                    Width="100" Margin="0,0,0,5"/>
            <Button Content="Reload Macro"
                    Command="{Binding ReloadMacroCommand}"
                    Width="100" Margin="0,0,0,5"/>
            <Button Content="Execute Macro"
                    Command="{Binding ExecuteMacroCommand}"
                    Width="100"/>
        </StackPanel>
    </Grid>
</UserControl>
